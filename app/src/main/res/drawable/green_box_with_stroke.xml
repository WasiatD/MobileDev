<!-- res/drawable/rounded_green_box_with_left_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners and light green color -->
    <item>
        <shape>
            <solid android:color="@color/light_green"/>
            <corners android:radius="25dp"/>
        </shape>
    </item>
    <!-- Left stroke -->
    <item android:left="0dp" android:right="50dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="5dp"
                android:color="@color/green_stroke" />
            <corners android:radius="25dp"/>
        </shape>
    </item>
</layer-list>
